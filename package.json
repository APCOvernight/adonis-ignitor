{
  "name": "adonis-ignitor",
  "version": "1.0.0",
  "description": "Fire the adonis-app (in good sense)",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "node --harmony-async-await ./node_modules/.bin/japa",
    "test": "./node_modules/.bin/nyc npm run test:local",
    "test:win": "node --harmony-async-await ./node_modules/japa-cli/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "adonisjs",
    "adonis-bootstrapper",
    "adonis-bootstraper"
  ],
  "author": "adonisjs",
  "license": "MIT",
  "devDependencies": {
    "adonis-fold": "git+https://github.com/poppinss/adonis-fold.git#dawn",
    "clear-require": "^2.0.0",
    "coveralls": "^2.13.0",
    "cz-conventional-changelog": "^2.0.0",
    "japa": "^1.0.3",
    "japa-cli": "^1.0.1",
    "nyc": "^10.2.0",
    "standard": "^10.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
